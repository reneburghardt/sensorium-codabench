/* --------------------------------------------------------------------------------------
    ********************************** Color Reference **********************************

    Jumbotron Background Color [Dark Blue]: rgba(19, 48, 70, 0.9)

    Button Text Color [Light Grey]: #e2e2e2
    Button Background Color [White, Low Opacity]: rgba(255, 255, 255, .15)

    Button Text Color w/ Hover [Lighter Grey]: #3f3f3f
    Button Background Color w/ Hover [White, Medium Opacity]: rgba(255, 255, 255, .65)

    Competition Tile Color [Lighter Blue]: #4a6778
    Competition Tile Color [Darker Red]: #c7402d
*/

$competition2023 = #ddff00
$currentcompetition = $competition2023

/* --------------------------------------------------------------------------------------
 misc styles for base template

 header/background
 */
html
    background-color #ffffff

.ui.segment,
.ui.segments,
.segment
    font-size 16px

h1,
h2,
h3,
h4,
h5
  font-family Jura, sans-serif

#bg
    z-index -1
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    background rgba(19, 48, 70, 0.9)

#jumbo_logo
    margin-top 20px
    width 75%

.organization-logos
    position absolute
    bottom 5px
    right 0


.organization-logo
    height 30px
    margin-right 5px

#home-logo
    margin-left: 8px;
    margin-right: 8px;

.right.item
    position absolute !important
    right 0
    top 9px


.left.item
    position absolute !important
    left 0
    top 9px

.ui.menu,
.ui.button
    font-family Jura, sans-serif

.ui.inverted.menu .item
    margin 0 10px

.ui.secondary.inverted.menu .item.button3d,
.ui.secondary.inverted.menu .item.button3d:hover
    --c #000000
    --b .1em
    --d 5px
    --_s calc(var(--d) + var(--b))
    color var(--c) !important
    border solid #000000
    border-width var(--b) var(--b) var(--_s) var(--_s)
    background unquote("conic-gradient(at left var(--_s) bottom var(--_s), #0000 90deg, var(--c) 0) 0 100% / calc(100% - var(--b)) calc(100% - var(--b)) border-box")
    clip-path polygon(0% var(--d), var(--d) 0%, 100% 0%, 100% calc(100% - var(--d)), calc(100% - var(--d)) 100%, 0% 100%)
    padding 0.1em 2em

.ui.secondary.inverted.pointing.menu
    border transparent

.jumbotron
    padding 0 0 2em 0 !important

    .subtitle
        color #b7c9d69c
        font-size 1rem

.style_button
    color #e2e2e2
    background-color rgba(255, 255, 255, .15)
    font-weight 100

.style_button:hover
    color #3f3f3f
    background-color rgba(255, 255, 255, .65)
    .icon
        opacity 1

#user_dropdown
    color rgba(255,255,255,.9) !important

    a
        width 100%
        border-radius 0 !important

#competition_dropdown
    a
        width 100%
        border-radius 0 !important

.masthead
    position relative

    .logo.item img
        margin-right 1em

    .ui.menu .ui.button
        margin-left 0.5em

    .ui.menu
        margin 0

    .menu .toc.item
        display none

    h1.ui.header
        margin-top 3em
        margin-bottom 0
        font-size 4em
        font-weight normal

    h2
        font-size 1.7em
        font-weight normal

    h3
        font-size 2em

    .button + h3,

    p + h3
        margin-top 3em

    .floated.image
        clear both

    p
        font-size 1.33em

    .horizontal.divider
        margin 3em 0

.quote.stripe.segment
    padding 0

    .grid .column
        padding-top 5em
        padding-bottom 5em

#page_content
    min-height 82vh
    margin-bottom 50px

#header
    background transparent
    margin-bottom 20px

    .ui.menu .ui.dropdown .menu>.item
        color rgba(0, 0, 0, 0.6) !important

    .icon.user.outline
        margin-right 0

#toast-container
    opacity 0.8
    margin-top 3em
    margin-right 0.5em

.ui.text.container.style_button
    bottom 0!important

/* --------------------------------------------------------------------------------------
 top menu/dropdowns
 */
.ui.thin.sidebar
    z-index 3


/* --------------------------------------------------------------------------------------
 footer
 */

.footer.ui.inverted.segment
    background #000000
    color #ffffff
    font-weight bold

    a
        color $currentcompetition

    .link.list
        a
            color #ffffff

.footer
    &.segment
        padding 2em 0 0
        margin 1em 7.5em

.footer #slack_logo
    width 120px

/* --------------------------------------------------------------------------------------
 mobile
 */
@media only screen and (max-width 625px)
    .tl.item
        display none!important

#hamburger_button
        position absolute
        top 14px
        left 19px
        z-index 100

        .button
            color #e2e2e2 !important
            background-color rgba(255, 255, 255, .15) !important

        .button:hover
            color #3f3f3f !important
            background-color rgba(255, 255, 255, .65) !important

        .icon
            display inherit
            cursor pointer
            margin 0

        @media screen and (min-width 626px)
            display none

    .secondary.pointing.menu .toc.item
        display block

    .masthead h1.ui.header
        font-size 2em
        margin-top 1.5em

    .masthead h2
        margin-top 0.5em
        font-size 1.5em

/* --------------------------------------------------------------------------------------
 Force the footer to stretch all the way to the bottom of viewport
 */
body.pushable>.pusher
    overflow initial

.pusher > .footer
    flex 1

/* --------------------------------------------------------------------------------------
 Mouse hole
 */
#mousehole
    display block
    margin 10px auto 0
    width 30px
    height 30px
    background-color $currentcompetition
    border-top-left-radius 50%
    border-top-right-radius 50%
    border-bottom-left-radius 0
    border-bottom-right-radius 0

/* --------------------------------------------------------------------------------------
 Fix padding on menus
 */
.ui.menu .ui.dropdown .menu>.item
    margin-top -0.6em !important



/* --------------------------------------------------------------------------------------
 For competition-wide search bar
 */
.search-width
    width 25em !important


.scrollable-height-limit
    max-height 25em !important
    overflow-y scroll !important

/* --------------------------------------------------------------------------------------
 Modals
 */
.modals
    .modal
        max-height 90vh
        overflow-y scroll

#version
    margin-top 10px
    text-align center
    font-weight bold
    padding 5px
    color #8b8d8d

#version a 
    text-decoration none
    color #ffffff